{
  "name": "timewarden",
  "version": "1.0.0",
  "private": true,
  "description": "Enforce daily time limits on websites. Take control of your browsing habits.",
  "type": "module",
  "packageManager": "pnpm@10.17.1",
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build",
    "typecheck": "tsc --noEmit",
    "svelte-check": "svelte-check",
    "lint": "biome check",
    "lint:fix": "biome check --fix",
    "format": "biome format --write",
    "check": "biome check --fix && tsc --noEmit && svelte-check",
    "bundle:firefox": "pnpm run build && web-ext build --source-dir dist --artifacts-dir web-ext-artifacts --overwrite-dest"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.13",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@tailwindcss/vite": "^4.0.0",
    "@types/node": "^25.2.0",
    "svelte": "^5.0.0",
    "svelte-check": "^4.3.6",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0",
    "web-ext": "^9.2.0"
  }
}
